<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="4dp"    android:clickable="true"    android:elevation="10dp"    android:focusable="true"    android:foreground="?attr/selectableItemBackground"    app:cardCornerRadius="10dp">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="250dp"        android:orientation="vertical">        <ImageView            android:id="@+id/imgRecyclerEstateImage"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="2"            android:scaleType="centerCrop"            android:src="@drawable/estate" />        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_margin="12dp"            android:layout_weight="1">            <TextView                android:id="@+id/txtRecyclerEstatePrice"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginBottom="20dp"                android:fontFamily="@font/roboto_medium"                android:text="99,900"                android:textColor="@color/colorAccent"                android:textSize="22sp"                android:textStyle="bold" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_toEndOf="@+id/txtRecyclerEstatePrice"                android:fontFamily="@font/roboto_medium"                android:text="/Month"                android:textColor="@color/colorPrimaryDark"                android:textSize="22sp" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginBottom="25dp"                android:layout_toStartOf="@+id/txtRecyclerEstateArea"                android:fontFamily="@font/roboto_medium"                android:text="Area :"                android:textColor="@color/colorPrimaryDark"                android:textSize="17dp" />            <TextView                android:id="@+id/txtRecyclerEstateArea"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentEnd="true"                android:layout_marginBottom="20dp"                android:fontFamily="@font/roboto_medium"                android:text="250 m"                android:textColor="@color/colorPrimaryDark"                android:textSize="17dp" />            <TextView                android:id="@+id/txtRecyclerEstateLocationWord"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/txtRecyclerEstatePrice"                android:fontFamily="@font/roboto_medium"                android:text="Location :"                android:textColor="@color/colorPrimaryDark"                android:textSize="17dp" />            <TextView                android:id="@+id/txtRecyclerEstateLocation"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/txtRecyclerEstatePrice"                android:layout_gravity="center"                android:layout_toEndOf="@+id/txtRecyclerEstateLocationWord"                android:fontFamily="@font/roboto_medium"                android:text="Aleppo / Alzhraa"                android:textColor="@color/colorPrimaryDark"                android:textSize="17dp" />            <TextView                android:id="@+id/btnRecyclerEstateSeeMoer"                android:layout_width="50dp"                android:layout_height="25dp"                android:layout_below="@id/txtRecyclerEstateArea"                android:layout_alignParentEnd="true"                android:background="@drawable/bac_button_sin_in"                android:gravity="center"                android:text="Show more"                android:textAllCaps="false"                android:textColor="@color/background"                android:textSize="7dp" />        </RelativeLayout>    </LinearLayout></androidx.cardview.widget.CardView>