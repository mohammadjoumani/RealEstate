<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/background"    tools:context=".view.fragment.ExplorFragment">    <ImageView        android:id="@+id/imgFragExplorEmptyData"        android:layout_width="200dp"        android:layout_height="200dp"        android:layout_centerInParent="true"        android:src="@drawable/ic_empty_data"        android:visibility="gone" />    <RelativeLayout        android:id="@+id/relativeAbove"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="5dp"        android:layout_marginTop="10dp"        android:orientation="horizontal">        <ImageButton            android:id="@+id/btnFragExplorBackToOpartion"            android:layout_width="34dp"            android:layout_height="34dp"            android:layout_centerVertical="true"            android:layout_marginHorizontal="5dp"            android:background="@drawable/ic_back" />        <TextView            android:id="@+id/txtFragHomeNameOpration"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_toEndOf="@+id/btnFragExplorBackToOpartion"            android:fontFamily="@font/roboto_medium"            android:text="My Estate"            android:textColor="@color/colorAccent"            android:textSize="20sp" />        <ImageView            android:id="@+id/imgFragHomeProfile"            android:layout_width="36dp"            android:layout_height="36dp"            android:layout_alignParentEnd="true"            android:layout_centerVertical="true"            android:layout_marginEnd="5dp"            android:src="@drawable/ic_user" />    </RelativeLayout>    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout        android:id="@+id/swipeRefreshFragExplorEstateRecycler"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@id/relativeAbove"        android:layout_alignParentStart="true"        android:layout_alignParentEnd="true"        android:layout_alignParentBottom="true">        <androidx.recyclerview.widget.RecyclerView            android:id="@+id/recyclerFragExplorEstate"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="vertical"            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"            tools:listitem="@layout/item_recycler_estate" />    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>    <!--  for shimmer Animation-->    <com.facebook.shimmer.ShimmerFrameLayout        android:id="@+id/shimmerAnimationFragExplorEstate"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@id/relativeAbove"        android:visibility="gone">        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="vertical">            <include layout="@layout/item_shimmer_estate" />            <include layout="@layout/item_shimmer_estate" />            <include layout="@layout/item_shimmer_estate" />        </LinearLayout>    </com.facebook.shimmer.ShimmerFrameLayout></RelativeLayout>